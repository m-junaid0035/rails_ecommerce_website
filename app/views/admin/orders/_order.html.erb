<div id="<%= dom_id order %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Customer email:</strong>
    <%= order.customer_email %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Fulfilled:</strong>
    <%= order.fulfilled? ? "Yes" : "No" %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Total:</strong>
    <%= number_to_currency(order.total) %> <!-- if you want currency formatting -->
  </div>
  <div>
    <strong class="block font-medium mb-1">Address:</strong>
    <%= order.address %>
  </div>
  
  <% if order.order_products.any? %>
    <div>
      <strong class="block font-medium mb-2">Products:</strong>
      <ul class="space-y-2 list-disc list-inside">
        <% order.order_products.each do |op| %>
          <li>
            <span class="font-semibold"><%= op.product.name %></span> â€” 
            Size: <%= op.size %>, 
            Quantity: <%= op.quantity %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>
