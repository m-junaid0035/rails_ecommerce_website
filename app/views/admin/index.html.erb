<h1 class="text-3xl sm:text-4xl font-extrabold text-gray-900 mb-10 sm:mb-12 tracking-tight text-center sm:text-left">
  Admin Dashboard
</h1>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 space-y-16">

  <!-- Stat Cards -->
  <div>
    <h2 class="text-xl sm:text-2xl font-bold text-gray-800 mb-4 sm:mb-6">Daily Overview</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-5 sm:gap-6">
      <% stats = [
        { label: "Revenue", value: @quick_stats[:revenue] ? (@quick_stats[:revenue]/100.0).to_s : "0", prefix: "$", bg: "bg-blue-600" },
        { label: "Total Sales", value: @quick_stats[:sales].to_s, bg: "bg-green-600" },
        { label: "Average Sale", value: @quick_stats[:avg_sale] ? (@quick_stats[:avg_sale]/100.0).to_s : "0", prefix: "$", bg: "bg-pink-600" },
        { label: "Items/Sale", value: @quick_stats[:per_sale].to_i.to_s, bg: "bg-yellow-500" }
      ] %>

      <% stats.each do |stat| %>
        <div class="<%= stat[:bg] %> text-white p-5 sm:p-6 rounded-2xl shadow-md hover:shadow-lg transform hover:scale-[1.02] transition duration-200 ease-in-out">
          <div class="text-xs sm:text-sm font-semibold tracking-widest uppercase opacity-90 mb-1"><%= stat[:label] %></div>
          <div class="text-3xl sm:text-4xl font-extrabold">
            <%= stat[:prefix] || "" %><%= stat[:value] %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Revenue Chart -->
  <div>
    <h2 class="text-xl sm:text-2xl font-bold text-gray-800 mb-4 sm:mb-6">Revenue Trends</h2>
    <div class="bg-white rounded-2xl shadow-md border border-gray-200 p-4 sm:p-6"
         data-controller="dashboard"
         data-dashboard-revenue-value="<%= @revenue_by_day.to_json %>">
      <canvas id="revenueChart" class="w-full h-72 sm:h-80"></canvas>
    </div>
  </div>

  <!-- Recent Orders Table -->
  <div>
    <h2 class="text-xl sm:text-2xl font-bold text-gray-800 mb-4 sm:mb-6">Recent Unfulfilled Orders</h2>
    <div class="overflow-auto rounded-2xl shadow-md border border-gray-200 bg-white">
      <table class="min-w-full text-sm divide-y divide-gray-100">
        <thead class="bg-gray-50 text-gray-700 uppercase font-semibold tracking-wider">
          <tr>
            <th class="px-4 sm:px-6 py-3 text-left">Order ID</th>
            <th class="px-4 sm:px-6 py-3 text-left">Customer</th>
            <th class="px-4 sm:px-6 py-3 text-left">Date</th>
            <th class="px-4 sm:px-6 py-3 text-left">Amount</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100 text-gray-800">
          <% @orders.each do |order| %>
            <tr class="hover:bg-gray-50 transition">
              <td class="px-4 sm:px-6 py-4 font-medium text-blue-600 whitespace-nowrap">
                <%= link_to order.id, admin_order_path(order), class: "hover:underline" %>
              </td>
              <td class="px-4 sm:px-6 py-4 whitespace-nowrap"><%= order.customer_email %></td>
              <td class="px-4 sm:px-6 py-4 whitespace-nowrap"><%= order.created_at.strftime("%B %d, %Y %H:%M") %></td>
              <td class="px-4 sm:px-6 py-4 font-semibold whitespace-nowrap">$<%= (order.total/100.0).to_s %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

</div>
