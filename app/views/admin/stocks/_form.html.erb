<%= form_with(model: [:admin, @product, admin_stock], class: "contents") do |form| %>
  <% if admin_stock.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-600 px-4 py-3 rounded-md mt-3 font-semibold">
      <h2><%= pluralize(admin_stock.errors.count, "error") %> prohibited this stock from being saved:</h2>
      <ul class="list-disc ml-6 mt-1 space-y-1">
        <% admin_stock.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :size, class: "block font-semibold text-gray-700" %>
    <%= form.text_field :size, class: [
      "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full text-gray-900 placeholder-gray-400",
      admin_stock.errors[:size].any? ? "border-red-500 focus:outline-red-600 focus:ring-red-600" : "border-gray-300 focus:outline-blue-600 focus:ring-blue-600"
    ] %>
  </div>

  <div class="my-5">
    <%= form.label :amount, class: "block font-semibold text-gray-700" %>
    <%= form.number_field :amount, class: [
      "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full text-gray-900 placeholder-gray-400",
      admin_stock.errors[:amount].any? ? "border-red-500 focus:outline-red-600 focus:ring-red-600" : "border-gray-300 focus:outline-blue-600 focus:ring-blue-600"
    ] %>
  </div>

  <div class="inline">
    <%= form.submit "Save Stock", class: "w-full sm:w-auto rounded-md px-4 py-2.5 bg-gradient-to-r from-blue-600 to-blue-500 hover:from-blue-700 hover:to-blue-600 text-white font-semibold shadow-lg transition-transform transform hover:scale-105 cursor-pointer" %>
  </div>
<% end %>
