<div id="<%= dom_id(stock) %>" class="w-full sm:w-auto my-5 space-y-5 p-4 bg-white rounded-md shadow-md border border-gray-200">
  <div>
    <strong class="block font-medium text-gray-700 mb-1">Size:</strong>
    <span class="text-gray-900"><%= stock.size %></span>
  </div>
  <div>
    <strong class="block font-medium text-gray-700 mb-1">Amount:</strong>
    <span class="text-gray-900"><%= stock.amount %></span>
  </div>
  <div>
    <strong class="block font-medium text-gray-700 mb-1">Product:</strong>
    <span class="text-gray-900"><%= stock.product_id %></span>
  </div>
</div>
