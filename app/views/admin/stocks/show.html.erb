<% content_for :title, "Showing stock" %>

<div class="md:w-2/3 w-full mx-auto mt-10 px-4">
  <% if notice.present? %>
    <p id="notice" class="py-2 px-3 bg-green-50 mb-5 text-green-600 font-medium rounded-md inline-block">
      <%= notice %>
    </p>
  <% end %>

  <h1 class="font-bold text-4xl mb-6">Showing stock</h1>

  <%= render @admin_stock %>

  <div class="flex flex-col sm:flex-row gap-3 mt-6">
    <%= link_to "Edit this stock", edit_admin_product_stock_path(@admin_stock), class: "w-full sm:w-auto text-center rounded-md px-4 py-2.5 bg-gray-100 hover:bg-gray-50 font-medium transition" %>

    <%= link_to "Back to stocks", admin_product_stocks_path, class: "w-full sm:w-auto text-center rounded-md px-4 py-2.5 bg-gray-100 hover:bg-gray-50 font-medium transition" %>

    <%= button_to "Destroy this stock", @admin_product_stock, method: :delete,
          form_class: "w-full sm:w-auto",
          class: "rounded-md px-4 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer transition",
          data: { turbo_confirm: "Are you sure?" } %>
  </div>
</div>
