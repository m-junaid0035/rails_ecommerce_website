<% content_for :title, "Stocks" %>

<div class="w-full max-w-5xl mx-auto mt-10 px-4">
  <% if notice.present? %>
    <p id="notice" class="py-2 px-3 bg-green-50 mb-5 text-green-600 font-medium rounded-md inline-block">
      <%= notice %>
    </p>
  <% end %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-4xl">Stocks</h1>
    <%= link_to "New stock", new_admin_product_stock_path, class: "rounded-md px-4 py-2.5 bg-blue-600 hover:bg-blue-500 text-white font-medium" %>
  </div>

  <div id="admin_stocks" class="space-y-6">
    <% if @admin_stocks.any? %>
      <% @admin_stocks.each do |admin_stock| %>
        <div class="flex flex-col sm:flex-row justify-between items-center bg-white rounded-md shadow p-4 border border-gray-200">
          <%= render admin_stock %>
          <div class="w-full sm:w-auto flex flex-col sm:flex-row space-y-2 sm:space-y-0 sm:space-x-3 mt-4 sm:mt-0">
            <%= link_to "Show", [:admin, admin_stock.product, admin_stock], class: "w-full sm:w-auto text-center rounded-md px-4 py-2.5 bg-gray-100 hover:bg-gray-50 font-medium" %>
            <%= link_to "Edit", edit_admin_product_stock_path(admin_stock.product, admin_stock), class: "w-full sm:w-auto text-center rounded-md px-4 py-2.5 bg-gray-100 hover:bg-gray-50 font-medium" %>
            <%= button_to "Destroy", [:admin, admin_stock.product, admin_stock], method: :delete, class: "w-full sm:w-auto rounded-md px-4 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center text-gray-500 my-10">No stocks found.</p>
    <% end %>
  </div>
</div>
