<%= form_with(model: [:admin, admin_product], class: "contents") do |form| %>
  <% if admin_product.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-600 px-4 py-3 rounded-md mt-3 font-semibold">
      <h2><%= pluralize(admin_product.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul class="list-disc ml-6 mt-1 space-y-1">
        <% admin_product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name, class: "block font-semibold text-gray-700" %>
    <%= form.text_field :name, class: [
      "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full text-gray-900 placeholder-gray-400",
      admin_product.errors[:name].any? ? "border-red-500 focus:outline-red-600 focus:ring-red-600" : "border-gray-300 focus:outline-teal-600 focus:ring-teal-600"
    ] %>
  </div>

  <div class="my-5">
    <%= form.label :description, class: "block font-semibold text-gray-700" %>
    <%= form.textarea :description, rows: 4, class: [
      "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full text-gray-900 placeholder-gray-400",
      admin_product.errors[:description].any? ? "border-red-500 focus:outline-red-600 focus:ring-red-600" : "border-gray-300 focus:outline-teal-600 focus:ring-teal-600"
    ] %>
  </div>

  <div class="relative mb-6">
    <% if admin_product.images.attached? %>
      <div class="flex flex-wrap gap-4 mb-4">
        <% admin_product.images.each do |image| %>
          <%= image_tag url_for(image), class: "w-20 h-20 object-cover rounded-md shadow-sm border border-gray-200" %>
        <% end %>
      </div>
    <% end %>

    <div class="flex items-center space-x-3 mb-2">
      <label for="image_upload" class="cursor-pointer inline-flex items-center px-4 py-2 bg-teal-600 hover:bg-teal-700 text-white text-sm font-medium rounded-md shadow transition">
        üìÅ Browse
      </label>
      <span id="file-name" class="text-sm text-gray-600 truncate">No file chosen</span>
    </div>

    <%= form.file_field :images,
      multiple: true,
      id: "image_upload",
      class: "absolute left-0 top-0 w-full h-full opacity-0 cursor-pointer",
      accept: "image/*",
      onchange: "document.getElementById('file-name').textContent = Array.from(this.files).map(f => f.name).join(', ') || 'No file chosen';"
    %>
  </div>

  <div class="my-5">
    <%= form.label :price, class: "block font-semibold text-gray-700" %>
    <%= form.number_field :price, class: [
      "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full text-gray-900 placeholder-gray-400",
      admin_product.errors[:price].any? ? "border-red-500 focus:outline-red-600 focus:ring-red-600" : "border-gray-300 focus:outline-teal-600 focus:ring-teal-600"
    ] %>
  </div>

  <div class="my-6">
    <%= form.label :category_id, "Select Category", class: "block text-sm font-semibold text-gray-700 mb-2" %>

    <%= form.collection_select :category_id, Category.order(:name), :id, :name,
      { prompt: "Choose a category" },
      class: [
        "block w-full px-4 py-2 rounded-md shadow-sm text-sm focus:ring-2 focus:ring-teal-500 focus:outline-none",
        "bg-white border",
        admin_product.errors[:category_id].any? ? "border-red-500 focus:border-red-500" : "border-gray-300 focus:border-teal-500"
      ] %>

    <% if admin_product.errors[:category_id].any? %>
      <p class="text-sm text-red-600 mt-1"><%= admin_product.errors[:category_id].first %></p>
    <% end %>
  </div>

  <div class="my-5 flex items-center gap-2">
    <%= form.label :active, class: "font-semibold text-gray-700" %>
    <%= form.checkbox :active, class: [
      "block shadow-sm rounded-md border order-first h-5 w-5",
      admin_product.errors[:active].any? ? "border-red-500 focus:outline-red-600" : "border-gray-300 focus:outline-teal-600"
    ] %>
  </div>

  <% if admin_product.persisted? %>
    <div class="my-5">
      <%= link_to "Product Stock", admin_product_stocks_path(admin_product), class: "underline text-teal-600 hover:text-teal-800 font-medium" %>
    </div>
  <% end %>

  <div class="inline">
    <%= form.submit "Save Product", class: "w-full sm:w-auto rounded-md px-4 py-2.5 bg-gradient-to-r from-teal-600 to-teal-500 hover:from-teal-700 hover:to-teal-600 text-white font-semibold shadow-lg transition-transform transform hover:scale-105 cursor-pointer" %>
  </div>
<% end %>
