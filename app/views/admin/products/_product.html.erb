<div id="<%= dom_id product %>" class="w-full sm:w-auto my-5 space-y-5 p-4 bg-white rounded-lg shadow-md border border-gray-200">
  <div>
    <strong class="block font-semibold mb-1 text-gray-700">Name:</strong>
    <p class="text-gray-900"><%= product.name %></p>
  </div>
  <div>
    <strong class="block font-semibold mb-1 text-gray-700">Description:</strong>
    <p class="text-gray-800"><%= product.description %></p>
  </div>
  <div>
    <strong class="block font-semibold mb-1 text-gray-700">Price:</strong>
    <p class="text-gray-900 font-medium">$<%= number_with_precision(product.price / 100.0, precision: 2) %></p>
  </div>
  <div>
    <strong class="block font-semibold mb-1 text-gray-700">Category:</strong>
    <p class="text-gray-900"><%= product.category&.name || "Uncategorized" %></p>
  </div>
  <div>
    <strong class="block font-semibold mb-1 text-gray-700">Active:</strong>
    <p class="text-gray-900"><%= product.active? ? "Yes" : "No" %></p>
  </div>
</div>
