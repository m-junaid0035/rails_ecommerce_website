<% content_for :title, "Showing product" %>

<div class="max-w-4xl mx-auto px-4 md:w-2/3 w-full">
  <% if notice.present? %>
    <p id="notice" class="py-2 px-3 bg-green-50 mb-6 text-green-600 font-medium rounded-md inline-block">
      <%= notice %>
    </p>
  <% end %>

  <h1 class="font-extrabold text-4xl mb-8 text-gray-900">Showing Product</h1>

  <%= render @admin_product %>

  <div class="flex flex-col sm:flex-row sm:items-center gap-3 mt-6">
    <%= link_to "Edit this product", edit_admin_product_path(@admin_product),
          class: "w-full sm:w-auto text-center rounded-md px-5 py-3 bg-gray-200 hover:bg-gray-300 text-gray-900 font-semibold transition inline-block" %>

    <%= link_to "Back to products", admin_products_path,
          class: "w-full sm:w-auto text-center rounded-md px-5 py-3 bg-gray-200 hover:bg-gray-300 text-gray-900 font-semibold transition inline-block" %>

    <%= button_to "Destroy this product", [:admin, @admin_product], method: :delete, form_class: "w-full sm:w-auto",
          class: "rounded-md px-5 py-3 bg-red-600 hover:bg-red-500 text-white font-semibold cursor-pointer transition",
          data: { turbo_confirm: "Are you sure?" } %>
  </div>
</div>
