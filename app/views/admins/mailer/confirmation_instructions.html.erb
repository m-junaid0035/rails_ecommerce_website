<p style="font-family: Arial, sans-serif; font-size: 16px; color: #333;">
  <%= t('devise.mailer.confirmation_instructions.greeting', email: @email, default: "Welcome %{email}!") %>
</p>

<p style="font-family: Arial, sans-serif; font-size: 16px; color: #555;">
  <%= t('devise.mailer.confirmation_instructions.message', default: "You can confirm your account email through the link below:") %>
</p>

<p>
  <%= link_to t('devise.mailer.confirmation_instructions.confirm_link', default: "Confirm my account"),
              confirmation_url(@resource, confirmation_token: @token),
              style: "display: inline-block; padding: 12px 20px; background-color: #4f46e5; color: white; text-decoration: none; border-radius: 6px; font-weight: bold; font-family: Arial, sans-serif;" %>
</p>
