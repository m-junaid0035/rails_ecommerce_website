<p style="font-family: Arial, sans-serif; font-size: 16px; color: #333;">
  <%= t('devise.mailer.unlock_instructions.greeting', email: @resource.email, default: "Hello %{email}!") %>
</p>

<p style="font-family: Arial, sans-serif; font-size: 16px; color: #555;">
  <%= t('devise.mailer.unlock_instructions.reason', default: "Your account has been locked due to too many unsuccessful sign-in attempts.") %>
</p>

<p style="font-family: Arial, sans-serif; font-size: 16px; color: #555;">
  <%= t('devise.mailer.unlock_instructions.instructions', default: "Click the link below to unlock your account:") %>
</p>

<p>
  <%= link_to t('devise.mailer.unlock_instructions.unlock_link_text', default: "Unlock my account"),
              unlock_url(@resource, unlock_token: @token),
              style: "display: inline-block; padding: 10px 20px; background-color: #2e86de; color: white; text-decoration: none; border-radius: 5px; font-weight: bold;" %>
</p>
