<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-indigo-100 via-purple-100 to-pink-100 px-4 py-12">
  <div class="max-w-md w-full bg-white rounded-3xl shadow-2xl p-10 sm:p-12 animate-fadeIn">
    <div class="mb-10 text-center">
      <h2 class="text-3xl font-extrabold text-indigo-700 tracking-wide mb-2">
        <%= t('devise.passwords.change_password_title', default: "Change your password") %>
      </h2>
      <p class="text-indigo-600 font-medium text-lg">
        <%= t('devise.passwords.change_password_subtitle', default: "Enter your new password below.") %>
      </p>
    </div>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, novalidate: true, class: "space-y-8" }) do |f| %>
      <%= render "admins/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div>
        <%= f.label :password, t('devise.passwords.new_password', default: "New password"), class: "block text-sm font-semibold text-indigo-700 mb-2" %>
        <% if @minimum_password_length %>
          <small class="text-gray-500 mb-2 block">
            <%= t('devise.passwords.password_length_hint', count: @minimum_password_length, default: "(%{count} characters minimum)") %>
          </small>
        <% end %>
        <%= f.password_field :password,
              autofocus: true,
              autocomplete: "new-password",
              placeholder: t('devise.passwords.new_password_placeholder', default: "Enter new password"),
              required: true,
              class: "w-full px-4 py-3 border-2 border-indigo-300 rounded-lg shadow-sm placeholder-indigo-300 text-indigo-900 focus:outline-none focus:ring-4 focus:ring-indigo-500 focus:border-indigo-600 transition" %>
      </div>

      <div>
        <%= f.label :password_confirmation, t('devise.passwords.confirm_password', default: "Confirm new password"), class: "block text-sm font-semibold text-indigo-700 mb-2" %>
        <%= f.password_field :password_confirmation,
              autocomplete: "new-password",
              placeholder: t('devise.passwords.confirm_password_placeholder', default: "Confirm new password"),
              required: true,
              class: "w-full px-4 py-3 border-2 border-indigo-300 rounded-lg shadow-sm placeholder-indigo-300 text-indigo-900 focus:outline-none focus:ring-4 focus:ring-indigo-500 focus:border-indigo-600 transition" %>
      </div>

      <div>
        <%= f.submit t('devise.passwords.change_password', default: "Change my password"),
              class: "w-full py-3 text-white bg-gradient-to-r from-indigo-600 to-indigo-700 rounded-xl shadow-lg hover:from-indigo-700 hover:to-indigo-800 focus:outline-none focus:ring-4 focus:ring-indigo-500 focus:ring-opacity-50 font-bold text-lg transition-transform active:scale-95" %>
      </div>
    <% end %>

    <div class="mt-8 text-center text-indigo-600 font-semibold">
      <%= render "admins/shared/links" %>
    </div>
  </div>
</div>

<style>
  @keyframes fadeIn {
    0% {opacity: 0; transform: translateY(20px);}
    100% {opacity: 1; transform: translateY(0);}
  }
  .animate-fadeIn {
    animation: fadeIn 0.6s ease forwards;
  }
</style>
