<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-indigo-100 via-purple-100 to-pink-100 px-4 py-12">
  <div class="max-w-md w-full bg-white rounded-3xl shadow-2xl p-10 sm:p-12 animate-fadeIn">
    <div class="mb-10 text-center">
      <h2 class="text-3xl font-extrabold text-indigo-700 tracking-wide mb-2">
        <%= t('devise.passwords.forgot_password_title', default: "Forgot your password?") %>
      </h2>
      <p class="text-indigo-600 font-medium text-lg">
        <%= t('devise.passwords.forgot_password_subtitle', default: "Enter your email below and we'll send you instructions.") %>
      </p>
    </div>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, novalidate: true, class: "space-y-8" }) do |f| %>
      <%= render "admins/shared/error_messages", resource: resource %>

      <div>
        <%= f.label :email, t('devise.passwords.email_label', default: "Email Address"), class: "block text-sm font-semibold text-indigo-700 mb-2" %>
        <%= f.email_field :email,
              autofocus: true,
              autocomplete: "email",
              placeholder: t('devise.passwords.email_placeholder', default: "Enter your email"),
              required: true,
              class: "w-full px-4 py-3 border-2 border-indigo-300 rounded-lg shadow-sm placeholder-indigo-300 text-indigo-900 focus:outline-none focus:ring-4 focus:ring-indigo-500 focus:border-indigo-600 transition" %>
      </div>

      <div class="mb-2 text-sm text-gray-700 font-medium">
  <%= t('devise.passwords.send_instructions_info', default: "Send reset password instructions to your email?") %>
</div>

<div>
  <%= f.submit "Send me", 
        class: "w-full py-2 text-white bg-gradient-to-r from-indigo-600 to-indigo-700 rounded-lg shadow-md hover:from-indigo-700 hover:to-indigo-800 focus:outline-none focus:ring-4 focus:ring-indigo-400 focus:ring-opacity-50 font-semibold text-sm transition-transform active:scale-95" %>
</div
    <% end %>

    <div class="mt-8 text-center text-indigo-600 font-semibold">
      <%= render "admins/shared/links" %>
    </div>
  </div>
</div>

<style>
  @keyframes fadeIn {
    0% {opacity: 0; transform: translateY(20px);}
    100% {opacity: 1; transform: translateY(0);}
  }
  .animate-fadeIn {
    animation: fadeIn 0.6s ease forwards;
  }
</style>
