<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-indigo-100 via-purple-100 to-pink-100 px-4 py-12">
  <div class="max-w-md w-full bg-white rounded-3xl shadow-2xl p-10 sm:p-12 animate-fadeIn">
    <div class="mb-10 text-center">
      <h1 class="text-4xl font-extrabold text-indigo-700 tracking-wide mb-2">Create Account</h1>
      <p class="text-indigo-600 font-medium text-lg">Join this E-commerce platform today</p>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-8" }) do |f| %>
      <%= render "admins/shared/error_messages", resource: resource %>

      <div class="space-y-6">
        <div>
          <%= f.label :email, "Email Address", class: "block text-sm font-semibold text-indigo-700 mb-2" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true,
              class: "w-full px-4 py-3 border-2 border-indigo-300 rounded-lg shadow-sm placeholder-indigo-300 text-indigo-900 focus:outline-none focus:ring-4 focus:ring-indigo-500 focus:border-indigo-600 transition" %>
        </div>

        <div>
          <%= f.label :password, "Password", class: "block text-sm font-semibold text-indigo-700 mb-2" %>
          <% if @minimum_password_length %>
            <em class="text-sm text-gray-500">(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", required: true,
              class: "w-full mt-2 px-4 py-3 border-2 border-indigo-300 rounded-lg shadow-sm placeholder-indigo-300 text-indigo-900 focus:outline-none focus:ring-4 focus:ring-indigo-500 focus:border-indigo-600 transition" %>
        </div>

        <div>
          <%= f.label :password_confirmation, "Confirm Password", class: "block text-sm font-semibold text-indigo-700 mb-2" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true,
              class: "w-full px-4 py-3 border-2 border-indigo-300 rounded-lg shadow-sm placeholder-indigo-300 text-indigo-900 focus:outline-none focus:ring-4 focus:ring-indigo-500 focus:border-indigo-600 transition" %>
        </div>
      </div>

      <div>
        <%= f.submit "Sign Up", class: "w-full py-3 text-white bg-gradient-to-r from-indigo-600 to-indigo-700 rounded-xl shadow-lg hover:from-indigo-700 hover:to-indigo-800 focus:outline-none focus:ring-4 focus:ring-indigo-500 focus:ring-opacity-50 font-bold text-lg transition-transform active:scale-95" %>
      </div>
    <% end %>

    <div class="mt-8 text-center text-indigo-600 font-semibold">
      <%= render "admins/shared/links" %>
    </div>
  </div>
</div>

<style>
  @keyframes fadeIn {
    0% {opacity: 0; transform: translateY(20px);}
    100% {opacity: 1; transform: translateY(0);}
  }
  .animate-fadeIn {
    animation: fadeIn 0.6s ease forwards;
  }
</style>
