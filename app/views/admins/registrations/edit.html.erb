<section class="min-h-screen flex items-center justify-center bg-gradient-to-r from-indigo-600 via-indigo-700 to-indigo-800 px-6 sm:px-12 lg:px-24">
  <div class="max-w-md w-full bg-white rounded-3xl shadow-2xl p-10 sm:p-12 animate-fadeIn">
    <div class="mb-10 text-center">
      <h1 class="text-4xl font-extrabold text-indigo-700 tracking-wide mb-2">Edit <%= resource_name.to_s.humanize %></h1>
      <p class="text-indigo-600 font-medium text-lg">Update your account details securely</p>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-8" }) do |f| %>
      <%= render "admins/shared/error_messages", resource: resource %>

      <div class="space-y-6">
        <div>
          <label for="email" class="block text-sm font-semibold text-indigo-700 mb-2">Email Address</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true,
            class: "w-full px-4 py-3 border-2 border-indigo-300 rounded-lg shadow-sm placeholder-indigo-300 text-indigo-900 focus:outline-none focus:ring-4 focus:ring-indigo-500 focus:border-indigo-600 transition" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="text-sm text-yellow-600 mb-4">
            Currently waiting confirmation for: <%= resource.unconfirmed_email %>
          </div>
        <% end %>

        <div>
          <label for="password" class="block text-sm font-semibold text-indigo-700 mb-2">
            Password
            <i class="font-normal text-gray-400">(leave blank if you don't want to change it)</i>
          </label>
          <%= f.password_field :password, autocomplete: "new-password",
            class: "w-full px-4 py-3 border-2 border-indigo-300 rounded-lg shadow-sm placeholder-indigo-300 text-indigo-900 focus:outline-none focus:ring-4 focus:ring-indigo-500 focus:border-indigo-600 transition" %>
          <% if @minimum_password_length %>
            <p class="mt-1 text-xs text-gray-400"><%= @minimum_password_length %> characters minimum</p>
          <% end %>
        </div>

        <div>
          <label for="password_confirmation" class="block text-sm font-semibold text-indigo-700 mb-2">Confirm Password</label>
          <%= f.password_field :password_confirmation, autocomplete: "new-password",
            class: "w-full px-4 py-3 border-2 border-indigo-300 rounded-lg shadow-sm placeholder-indigo-300 text-indigo-900 focus:outline-none focus:ring-4 focus:ring-indigo-500 focus:border-indigo-600 transition" %>
        </div>

        <div>
          <label for="current_password" class="block text-sm font-semibold text-indigo-700 mb-2">
            Current Password
            <i class="font-normal text-gray-400">(we need your current password to confirm your changes)</i>
          </label>
          <%= f.password_field :current_password, autocomplete: "current-password", required: true,
            class: "w-full px-4 py-3 border-2 border-indigo-300 rounded-lg shadow-sm placeholder-indigo-300 text-indigo-900 focus:outline-none focus:ring-4 focus:ring-indigo-500 focus:border-indigo-600 transition" %>
        </div>
      </div>

      <div>
        <%= f.submit "Update", class: "w-full py-3 text-white bg-gradient-to-r from-indigo-600 to-indigo-700 rounded-xl shadow-lg hover:from-indigo-700 hover:to-indigo-800 focus:outline-none focus:ring-4 focus:ring-indigo-500 focus:ring-opacity-50 font-bold text-lg transition-transform active:scale-95" %>
      </div>
    <% end %>

    <div class="mt-8 text-center">
      <h3 class="text-indigo-700 font-bold text-xl mb-3">Cancel my account</h3>
      <p class="mb-4 text-gray-700">Unhappy? You can cancel your account below:</p>
      <%= button_to "Cancel my account", registration_path(resource_name),
          data: { confirm: "Are you sure you want to cancel your account?" },
          method: :delete,
          class: "inline-block px-6 py-3 bg-red-600 hover:bg-red-700 text-white font-semibold rounded-xl shadow-md transition-transform active:scale-95" %>
    </div>

    <div class="mt-8 text-center text-indigo-600 font-semibold">
      <%= link_to "Back", :back, class: "underline hover:text-indigo-700" %>
    </div>
  </div>

  <style>
    @keyframes fadeIn {
      0% {opacity: 0; transform: translateY(20px);}
      100% {opacity: 1; transform: translateY(0);}
    }
    .animate-fadeIn {
      animation: fadeIn 0.6s ease forwards;
    }
  </style>
</section>
