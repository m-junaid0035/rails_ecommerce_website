<h2 class="text-3xl font-extrabold text-indigo-700 mb-6"><%= t('devise.unlocks.resend_instructions', default: "Resend Unlock Instructions") %></h2>

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, class: "space-y-6" }) do |f| %>
  <%= render "admins/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class: "block text-sm font-semibold text-indigo-700 mb-2" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: t('devise.unlocks.email_placeholder', default: "Enter your email"),
          required: true,
          class: "w-full px-4 py-3 border-2 border-indigo-300 rounded-lg shadow-sm placeholder-indigo-300 text-indigo-900 focus:outline-none focus:ring-4 focus:ring-indigo-500 focus:border-indigo-600 transition" %>
  </div>

  <div class="actions">
    <%= f.submit t('devise.unlocks.resend_instructions', default: "Resend Unlock Instructions"),
          class: "w-full py-3 text-white bg-gradient-to-r from-indigo-600 to-indigo-700 rounded-xl shadow-lg hover:from-indigo-700 hover:to-indigo-800 focus:outline-none focus:ring-4 focus:ring-indigo-500 focus:ring-opacity-50 font-bold text-lg transition-transform active:scale-95" %>
  </div>
<% end %>

<div class="mt-8 text-center text-indigo-600 font-semibold">
  <%= render "admins/shared/links" %>
</div>
