<footer class="bg-white text-gray-800 relative overflow-hidden pt-16 pb-12">
  <!-- Decorative curved background -->
  <div class="absolute inset-x-0 top-0 -translate-y-1/2">
    <svg class="w-full h-24 md:h-32 text-white" preserveAspectRatio="none" viewBox="0 0 1440 320" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
      <path fill-opacity="1" d="M0,192L48,186.7C96,181,192,171,288,176C384,181,480,203,576,197.3C672,192,768,160,864,138.7C960,117,1056,107,1152,133.3C1248,160,1344,224,1392,256L1440,288L1440,0L1392,0C1344,0,1248,0,1152,0C1056,0,960,0,864,0C768,0,672,0,576,0C480,0,384,0,288,0C192,0,96,0,48,0L0,0Z"></path>
    </svg>
  </div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-12">
      
      <!-- About Section -->
      <div class="bg-white rounded-2xl p-6 shadow-lg hover:shadow-indigo-600/40 transition-shadow duration-300">
        <h3 class="text-sm font-semibold tracking-widest uppercase text-indigo-600 mb-4">About Ecomm</h3>
        <p class="text-base leading-relaxed text-gray-800">
          Ecomm is your trusted online marketplace for top-quality products and outstanding customer service. Our commitment to excellence means you can shop with confidence, always.
        </p>
      </div>

      <!-- Quick Links -->
      <div class="bg-white rounded-2xl p-6 shadow-lg hover:shadow-indigo-600/40 transition-shadow duration-300">
        <h3 class="text-sm font-semibold tracking-widest uppercase text-indigo-600 mb-4">Quick Links</h3>
        <ul class="space-y-3">
          <% {
            "Contact" => contact_path,
            "About Us" => about_path
          }.each do |label, path| %>
            <li>
              <%= link_to label, path, class: "hover:text-indigo-600 transition-colors duration-300 block font-semibold" %>
            </li>
          <% end %>
        </ul>
      </div>

      <!-- Contact Info -->
      <div class="bg-white rounded-2xl p-6 shadow-lg hover:shadow-indigo-600/40 transition-shadow duration-300">
        <h3 class="text-sm font-semibold tracking-widest uppercase text-indigo-600 mb-4">Contact</h3>
        <ul class="space-y-3 text-base leading-relaxed text-gray-800">
          <li>
            123 Ecom Lane<br>
            E-commerce City, EC 12345
          </li>
          <li>
            Email: <a href="mailto:support@ecom.com" class="hover:text-indigo-600 transition font-semibold">support@ecom.com</a>
          </li>
          <li>
            Phone: <a href="tel:+1234567890" class="hover:text-indigo-600 transition font-semibold">(123) 456-7890</a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Divider & Bottom -->
    <div class="border-t border-gray-300 mt-16 pt-8">
      <div class="flex flex-col md:flex-row items-center justify-between gap-6">
        
        <p class="text-sm text-indigo-500 text-center md:text-left select-none">
          &copy; <%= Time.now.year %> Ecomm, Inc. All rights reserved.
        </p>

        <!-- Social Media Icons -->
        <div class="flex space-x-8">
          <% {
            "Facebook" => "facebook",
            "Twitter" => "twitter",
            "Instagram" => "instagram"
          }.each do |label, icon| %>
            <a href="#" class="text-indigo-500 hover:text-indigo-600 transition" aria-label="<%= label %>">
              <%= icon "fa-brands", icon, class: "h-6 w-6" %>
            </a>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</footer>
