<div class="px-6 py-10 max-w-xl mx-auto bg-white rounded-3xl shadow-lg ring-1 ring-gray-200">
  <h1 class="text-4xl font-extrabold mb-8 text-gray-900 tracking-tight">Your Cart</h1>
  
  <div id="errorContainer" role="alert" aria-live="assertive" class="mb-6 text-red-600 font-semibold"></div>

  <div data-controller="cart" class="space-y-8">
    <div id="total" class="text-xl font-bold text-gray-900"></div>

    <button
      class="w-full py-4 bg-indigo-600 hover:bg-indigo-700 focus-visible:ring-4 focus-visible:ring-indigo-400 text-white text-lg font-semibold rounded-2xl shadow-md transition duration-300 ease-in-out"
      data-action="click->cart#checkout"
      type="button"
    >
      Checkout
    </button>

    <button
      class="w-full py-4 bg-gray-300 hover:bg-gray-400 focus-visible:ring-4 focus-visible:ring-gray-300 text-gray-800 text-lg font-semibold rounded-2xl shadow-sm transition duration-300 ease-in-out"
      data-action="click->cart#clear"
      type="button"
    >
      Clear Cart
    </button>
  </div>
</div>
