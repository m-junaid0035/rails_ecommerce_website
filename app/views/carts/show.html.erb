<div class="min-h-screen bg-gray-50 flex flex-col items-center p-6">
  <h1 class="text-3xl font-bold text-gray-800 mb-6">Cart Page</h1>

  <div id="errorContainer" role="alert" class="w-full max-w-lg mb-4 text-red-600"></div>

  <div data-controller="cart" class="w-full max-w-lg bg-white rounded-lg shadow p-6 flex flex-col items-center space-y-6">
    <div id="total" class="text-xl font-semibold text-gray-700"></div>

    <div class="flex gap-4">
      <button 
        class="py-2 px-6 bg-gray-600 hover:bg-gray-700 text-white rounded transition"
        data-action="click->cart#checkout"
        type="button"
      >
        Checkout
      </button>

      <button 
        class="py-2 px-6 bg-gray-600 hover:bg-gray-700 text-white rounded transition"
        data-action="click->cart#clear"
        type="button"
      >
        Clear Cart
      </button>
    </div>
  </div>
</div>
